<!DOCTYPE html>
<html>

<head>
    <title>Incredibly Simple Shopping - <%= item.name %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/main.css">
</head>

<body>

<div class="container">
    <div class="pb-2 mt-4 mb-2 border-bottom">
        <h1><%= item.name %></h1>
        <p>(<a href="/items">back</a>)</p>
    </div>

    <div class="row">
        <div class="col-4">
            <img class="img-fluid" src="<%= item.imageUrl %>">
        </div>

        <div class="col-4">
            <div><%= item.description %></div>
            <div><em>$<%= item.price %></em></div>
        </div>
    </div>

    <div class="reviews-section my-4">
        <h3>Reviews</h3>
        <% if(item.reviews && item.reviews.length > 0) { %>
            <% item.reviews.forEach(function(review) { %>
                <div class="review">
                    <strong><%= review.name %></strong>: <%= review.comment %>
                </div>
            <% }); %>
        <% } else { %>
            <p>No reviews yet.</p>
        <% } %>
    </div>


    <div class="review-form">
        <h4>Add Your Review</h4>
        <form action="/add_review/<%= item.id %>" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="comment">Review:</label>
                <textarea class="form-control" id="comment" name="comment" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
    </div>
</div>

</body>
</html>
